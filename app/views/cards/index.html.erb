<div class="container">
	<div class="pt-3 text-light">
		<div class="row d-flex justify-content-center">
			<%= render 'search_form' %>
		</div>
		<div class="row d-flex justify-content-center">
			<%= render 'filter_form' %>
		</div>
	</div>
	<div class="row pt-3" id="cards">
		<% @cards.each do |card| %>
			<div class="col-3" style="height:auto;width:auto;">
				<%= image_tag "#{card.gameAbsolutePath}", size: 'height:auto;width:auto;', class: 'card-img-top', alt: "#{card.cardCode}"%>
			</div>
		<% end %>
	</div>
</div>
